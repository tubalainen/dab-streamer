# === Ports ===
# Web UI port exposed on host
WEB_PORT=8080
# welle-cli internal HTTP port
WELLE_PORT=7979
# API backend internal port
API_PORT=3000

# === DAB Tuning ===
# Fallback channel if no scan data exists
DEFAULT_CHANNEL=5A
# Default RTL-SDR gain (-1 = AGC/automatic, 0-49 = manual gain in dB)
DEFAULT_GAIN=-1

# === Scanner ===
# Seconds to wait per channel during scan
SCAN_TIMEOUT=10

# === Device Management ===
# Seconds between stale lock reaper runs
LOCK_REAPER_INTERVAL=30

# === Setup ===
# Keep scan data when resetting setup wizard (true/false)
KEEP_SCAN_DATA_ON_RESET=true
